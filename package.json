{
  "name": "nostromo-ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0",
      "cross-spawn": ">=7.0.6",
      "esbuild": ">=0.25.0",
      "dompurify": ">=3.2.4",
      "qs": ">=6.14.1",
      "lodash-es": ">=4.17.23",
      "diff": ">=5.2.2"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && rm -rf node_modules && rm -rf packages/*/node_modules",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:serve": "pnpm --filter docs start",
    "ui-core:dev": "turbo run dev --filter=@nostromo/ui-core",
    "ui-core:build": "turbo run build --filter=@nostromo/ui-core",
    "ui-core:test": "turbo run test --filter=@nostromo/ui-core",
    "analyze": "ANALYZE=true turbo run build",
    "audit:contrast": "tsx scripts/audit-contrast.ts",
    "validate:theme-contrasts": "tsx scripts/validate-theme-contrasts.ts",
    "verify:tailwind-v4": "tsx scripts/verify-tailwind-v4.ts",
    "validate:exports": "tsx scripts/validate-exports.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "postinstall:ui-tw": "turbo run build --filter=@nostromo/ui-tw",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,mdx,css,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@adobe/css-tools": "^4.4.4",
    "@babel/runtime": "^7.28.6",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@jest/diff-sequences": "^30.0.1",
    "@jest/get-type": "^30.1.0",
    "@jridgewell/sourcemap-codec": "^1.5.5",
    "@storybook/icons": "^2.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/expect": "^4.0.18",
    "@vitest/pretty-format": "^4.0.18",
    "@vitest/runner": "^4.0.18",
    "@vitest/snapshot": "^4.0.18",
    "@vitest/spy": "^4.0.18",
    "@vitest/utils": "^4.0.18",
    "ansi-styles": "^6.2.3",
    "aria-hidden": "^1.2.6",
    "bundle-analyzer": "^0.0.6",
    "chai": "^6.2.2",
    "chalk": "^5.6.2",
    "css.escape": "^1.5.1",
    "detect-node-es": "^1.1.0",
    "error": "link:@vitest/utils/error",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "get-nonce": "^1.0.1",
    "husky": "^9.1.7",
    "indent-string": "^5.0.0",
    "jest-diff": "^30.2.0",
    "jest-matcher-utils": "^30.2.0",
    "js-tokens": "^10.0.0",
    "lint-staged": "^16.2.7",
    "lodash.merge": "^4.6.2",
    "loupe": "^3.2.1",
    "lz-string": "^1.5.0",
    "magic-string": "^0.30.21",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1",
    "pretty-format": "^30.2.0",
    "react-is": "^19.2.3",
    "react-remove-scroll": "^2.7.2",
    "react-remove-scroll-bar": "^2.3.8",
    "react-style-singleton": "^2.2.3",
    "redent": "^4.0.0",
    "source-map": "link:@vitest/utils/source-map",
    "std-env": "^3.10.0",
    "strip-indent": "^4.1.1",
    "strip-literal": "^3.1.0",
    "tinyrainbow": "^3.0.3",
    "tinyspy": "^4.0.4",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "use-callback-ref": "^1.3.3",
    "use-sidecar": "^1.1.3",
    "use-sync-external-store": "^1.6.0",
    "utils": "link:@vitest/runner/utils"
  }
}
