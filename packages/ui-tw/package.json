{
  "name": "@nostromo/ui-tw",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./tailwind.preset.js": {
      "import": "./dist/tailwind.preset.js",
      "require": "./dist/tailwind.preset.cjs",
      "default": "./dist/tailwind.preset.js"
    },
    "./base.css": "./dist/base.css",
    "./themes/nostromo.css": "./dist/themes/nostromo.css",
    "./themes/mother.css": "./dist/themes/mother.css",
    "./themes/lv-426.css": "./dist/themes/lv-426.css",
    "./themes/sulaco.css": "./dist/themes/sulaco.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css",
    "./dist/**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.36.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.15"
  }
}
