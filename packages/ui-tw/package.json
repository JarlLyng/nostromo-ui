{
  "name": "@nostromo/ui-tw",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./tailwind.preset.js": {
      "import": "./dist/tailwind.preset.mjs",
      "require": "./dist/tailwind.preset.js"
    },
    "./base.css": "./dist/base.css",
    "./themes/nostromo.css": "./dist/themes/nostromo.css",
    "./themes/mother.css": "./dist/themes/mother.css",
    "./themes/lv-426.css": "./dist/themes/lv-426.css",
    "./themes/sulaco.css": "./dist/themes/sulaco.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup && npm run copy-css",
    "copy-css": "mkdir -p dist/themes && cp src/themes/*.css dist/themes/ && cp src/styles/*.css dist/",
    "dev": "tsup --watch",
    "test": "vitest --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
