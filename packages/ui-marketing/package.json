{
  "name": "@nostromo/ui-marketing",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./hero": {
      "import": "./dist/components/hero.js",
      "require": "./dist/components/hero.cjs",
      "types": "./dist/components/hero.d.ts"
    },
    "./testimonials": {
      "import": "./dist/components/testimonials.js",
      "require": "./dist/components/testimonials.cjs",
      "types": "./dist/components/testimonials.d.ts"
    },
    "./features": {
      "import": "./dist/components/features.js",
      "require": "./dist/components/features.cjs",
      "types": "./dist/components/features.d.ts"
    },
    "./pricing": {
      "import": "./dist/components/pricing.js",
      "require": "./dist/components/pricing.cjs",
      "types": "./dist/components/pricing.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@nostromo/ui-core": "workspace:^"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9"
  }
}
