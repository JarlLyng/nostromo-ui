{
  "name": "@nostromo/ui-marketing",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./hero": {
      "types": "./dist/components/hero.d.ts",
      "import": "./dist/components/hero.js",
      "require": "./dist/components/hero.cjs"
    },
    "./testimonials": {
      "types": "./dist/components/testimonials.d.ts",
      "import": "./dist/components/testimonials.js",
      "require": "./dist/components/testimonials.cjs"
    },
    "./features": {
      "types": "./dist/components/features.d.ts",
      "import": "./dist/components/features.js",
      "require": "./dist/components/features.cjs"
    },
    "./pricing": {
      "types": "./dist/components/pricing.d.ts",
      "import": "./dist/components/pricing.js",
      "require": "./dist/components/pricing.cjs"
    },
    "./gallery": {
      "types": "./dist/components/gallery.d.ts",
      "import": "./dist/components/gallery.js",
      "require": "./dist/components/gallery.cjs"
    },
    "./logo-wall": {
      "types": "./dist/components/logo-wall.d.ts",
      "import": "./dist/components/logo-wall.js",
      "require": "./dist/components/logo-wall.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nostromo/ui-core": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest-axe": "^10.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
