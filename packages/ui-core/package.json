{
  "name": "@nostromo/ui-core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/components/button.js",
      "require": "./dist/components/button.cjs",
      "types": "./dist/components/button.d.ts"
    },
    "./badge": {
      "import": "./dist/components/badge.js",
      "require": "./dist/components/badge.cjs",
      "types": "./dist/components/badge.d.ts"
    },
    "./card": {
      "import": "./dist/components/card.js",
      "require": "./dist/components/card.cjs",
      "types": "./dist/components/card.d.ts"
    },
    "./avatar": {
      "import": "./dist/components/avatar.js",
      "require": "./dist/components/avatar.cjs",
      "types": "./dist/components/avatar.d.ts"
    },
    "./input": {
      "import": "./dist/components/input.js",
      "require": "./dist/components/input.cjs",
      "types": "./dist/components/input.d.ts"
    },
    "./dialog": {
      "import": "./dist/components/dialog.js",
      "require": "./dist/components/dialog.cjs",
      "types": "./dist/components/dialog.d.ts"
    },
    "./tabs": {
      "import": "./dist/components/tabs.js",
      "require": "./dist/components/tabs.cjs",
      "types": "./dist/components/tabs.d.ts"
    },
    "./select": {
      "import": "./dist/components/select.js",
      "require": "./dist/components/select.cjs",
      "types": "./dist/components/select.d.ts"
    },
    "./label": {
      "import": "./dist/components/label.js",
      "require": "./dist/components/label.cjs",
      "types": "./dist/components/label.d.ts"
    },
    "./helper-text": {
      "import": "./dist/components/helper-text.js",
      "require": "./dist/components/helper-text.cjs",
      "types": "./dist/components/helper-text.d.ts"
    },
    "./error-message": {
      "import": "./dist/components/error-message.js",
      "require": "./dist/components/error-message.cjs",
      "types": "./dist/components/error-message.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run --reporter=verbose src/components/__tests__/*.a11y.test.tsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "analyze": "ANALYZE=true tsup"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@nostromo/ui-tw": "workspace:^",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/manager-api": "9.0.0-alpha.1",
    "@storybook/react-vite": "^9.1.5",
    "@storybook/test": "9.0.0-alpha.2",
    "@storybook/theming": "9.0.0-alpha.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "axe-core": "^4.10.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "9.1.5",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "storybook": "^9.1.5",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "phosphor-react": "^1.4.1",
    "tailwind-merge": "^3.3.1"
  }
}
