{
  "name": "@nostromo/ui-core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/components/button.js",
      "require": "./dist/components/button.cjs",
      "types": "./dist/components/button.d.ts"
    },
    "./badge": {
      "import": "./dist/components/badge.js",
      "require": "./dist/components/badge.cjs",
      "types": "./dist/components/badge.d.ts"
    },
    "./card": {
      "import": "./dist/components/card.js",
      "require": "./dist/components/card.cjs",
      "types": "./dist/components/card.d.ts"
    },
    "./avatar": {
      "import": "./dist/components/avatar.js",
      "require": "./dist/components/avatar.cjs",
      "types": "./dist/components/avatar.d.ts"
    },
    "./input": {
      "import": "./dist/components/input.js",
      "require": "./dist/components/input.cjs",
      "types": "./dist/components/input.d.ts"
    },
    "./dialog": {
      "import": "./dist/components/dialog.js",
      "require": "./dist/components/dialog.cjs",
      "types": "./dist/components/dialog.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.mjs",
      "require": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "storybook:vue": "storybook dev -p 6008 --config-dir .storybook-vue",
    "build-storybook": "storybook build",
    "build-storybook:vue": "storybook build --config-dir .storybook-vue",
    "test-storybook": "test-storybook",
    "lint": "eslint src --ext .ts,.tsx,.vue",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/vue3": "8.6.14",
    "@storybook/vue3-vite": "8.6.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/test-utils": "^2.4.6",
    "axe-core": "^4.10.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "storybook": "^8.6.14",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1"
  }
}
